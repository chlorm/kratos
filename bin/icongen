#!/usr/bin/env sh
# TODO: add flag for image format, default to png
# TODO: make sure imagick is installed
case $@ in
    -f|--format)
        # Default
        FORMAT="png"
        ;;
    -s|--size)
        # Default
        SIZE="96"
        ;;
esac

convert \
    -resize "$SIZE"x"$SIZE"^ \
    -extent "$SIZE"x"$SIZE" \
    -gravity center \
    -background none \
    $i \
    16_$1."$FORMAT"

icongen96 () {
    for i in $( ls *.png)
    do convert -resize 96x96^ -gravity center -extent 96x96 -background none $i 96_$i
    done
}
