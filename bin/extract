#!/usr/bin/env sh
# TODO: add check to make sure binaries exist
if [ -f $1 ]; then
    case $1 in
        *.tar) tar xf $1 ;;
        *.tar.bz2) tar xjf $1 ;;
        *.tbz2) tar xjf $1 ;;
        *.bz2) bunzip2 $1 ;;
        *.tar.gz) tar xzf $1 ;;
        *.tgz) tar xzf $1 ;;
        *.gz) gunzip $1 ;;
        *.tar.xz) tar xJf $1 ;;
        *.txz) tar xJf $1 ;;
        *.rar) unrar e $1 ;;
        *.zip) unzip $1 ;;
        *.Z) uncompress $1 ;;
        *.7z) 7z x $1 ;;
        *) echo "'$1' is not a supported file type" ;;
    esac
else
    echo "'$1' is not a valid file"
fi