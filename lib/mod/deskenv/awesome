#!/usr/bin/env sh

deskenv_awesome_installed () {

  path_hasbin "awesome" || return 1

  return 0

}

awesome_deskenv () {

  deskenv_awesome_installed || return 1

  TILING=1


  [ -d "$XDG_CONFIG_HOME/wallpaper" ] && {
    [ "$(ls "$XDG_CONFIG_HOME/wallpaper" | wc -l)" -gt "1" ] && {
      sleep 2
      while true ; do
        awsetbg -r "$XDG_CONFIG_HOME/wallpaper"
        sleep 300
      done &
    }
  }

  config_ln "config/awesome"

}
