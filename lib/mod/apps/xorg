#!/usr/bin/env sh

program_xorg_installed () {

  path_hasbin "Xorg" || return 1

  return 0

}

program_xorg_dotfiles () {

config_ln "xinitrc" "xprofile" "xsession" || return 1 #"Xresources"

return 0

}

program_xorg_cleanup () {

  rm -f "$HOME/.xinitrc"
  rm -f "$HOME/.xprofile"
  rm -f "$HOME/.xsession"
  rm -f "$HOME/.Xresources"

}

program_xorg_configure () {

  program_xorg_installed || return 1

  program_xorg_dotfiles || return 1

  return 0

}

program_xorg () {

  program_xorg_configure || { program_xorg_cleanup ; return 1 ; }

  return 0

}
