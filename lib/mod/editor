#!/usr/bin/env sh

emacs_editor () {

  path_hasbin emacs || return 1

  [ -d "$HOME/.emacs" ] && { rm -rf "$HOME/.emacs" ; return $? ; }

  config_ln "emacs.d"

}

gvim_editor () {

  path_hasbin gvim || return 1

  config_ln "gvimrc"

}

sublime_editor () {

  path_hasbin sublime || return 1

  config_ln "config/sublime-text-3"

}

vim_editor () {

  path_hasbin vim || return 1

  [ -d "$HOME/.viminfo" ] && { rm -rf "$HOME/.viminfo" ; return $? ; }

  config_ln "vimrc"

}

# Automatically configure editors
editor_auto () {

  emacs_editor
  gvim_editor
  sublime_editor
  vim_editor

}