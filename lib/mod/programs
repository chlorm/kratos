#!/usr/bin/env sh

# Application specific configuration

apps_headless () {

  app_beets
  app_cabal
  app_emacs
  app_git
  app_golang
  app_gvim
  app_htop
  app_minidlna
  app_mpd
  app_nixpkgs
  app_pulseaudio
  app_rtorrent
  app_ssh
  app_tmux
  app_vim

}

apps_graphical () {

  app_sakura
  app_sublimetext
  app_suckless
  app_xorg

}

apps_configure () {

  apps_headless

  [ app_xorg_installed ] && {
    apps_graphical
  }

}
